<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.rowell.sifa.mapper.dailymgr.SmsCulpritMapper" >
  <resultMap id="BaseResultMap" type="com.rowell.sifa.pojo.dailymgr.SmsCulprit" >
    <id column="ID" property="id" jdbcType="VARCHAR" />
    <result column="SMS_ID" property="smsId" jdbcType="VARCHAR" />
    <result column="CULPRIT_ID" property="culpritId" jdbcType="VARCHAR" />
    <result column="DIC_STATUS_KEY" property="dicStatusKey" jdbcType="VARCHAR" />
    <result column="CREATED" property="created" jdbcType="DATE" />
    <result column="CREATER" property="creater" jdbcType="VARCHAR" />
    <result column="UPDATED" property="updated" jdbcType="DATE" />
    <result column="UPDATER" property="updater" jdbcType="VARCHAR" />
    <result column="DEL_FLAG" property="delFlag" jdbcType="DECIMAL" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    ID, SMS_ID, CULPRIT_ID, DIC_STATUS_KEY, CREATED, CREATER, UPDATED, UPDATER, DEL_FLAG
  </sql>
 <select id="selectAll" parameterType="com.rowell.sifa.pojo.dailymgr.SmsCulprit" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from SF_SMS_CULPRIT 
    <where>
      <include refid="findAllWhere" />
    </where>
      <if test="orderStr!=null">
      <![CDATA[
          order by  ${orderStr}
      ]]>
    </if>
  </select>	
  <sql id="findAllWhere">
  	  <if test="creater != null and creater !=''">
      AND  CREATER=#{creater,jdbcType=VARCHAR}
      </if>
      <if test="searchStartDate != null and searchStartDate!=''">
     <![CDATA[
      AND CREATED >= #{searchStartDate,jdbcType=TIMESTAMP}
      ]]>
    </if>
     <if test="searchEndDate != null and searchEndDate!=''">
     <![CDATA[
      AND CREATED <= #{searchEndDate,jdbcType=TIMESTAMP}
      ]]>
    </if>
  </sql>
</mapper>